@model APIConsume.Models.UbahPasswordForm

@{
    ViewData["Title"] = "UbahPasswordFormKaryawan";
}
@{
    //ViewData["Title"] = "LupaPassword";
    Layout = "~/Views/Shared/_LayoutDosen.cshtml";
}


<head>
    <script src="sweetalert2.min.js"></script>
    <link rel="stylesheet" href="sweetalert2.min.css">
    <link rel="stylesheet" href="path/to/font-awesome/css/font-awesome.min.css">
</head>
<body>
    <!-- Content Wrapper. Contains page content -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">

                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->

    </section>

    <div class="content-wrapper">

        <section class="content">
            <div class="container-fluid">


                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Ubah Password</h3>
                    </div>

                    <div class="card-body">
                        <form asp-action="UbahPasswordFormKaryawan">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <div class="col-xl-4 col-md-4 col-xs-4">
                                    <label asp-for="passwordLama" class="control-label"></label>
                                    @*<input type="password" asp-for="passwordLama" class="form-control" />*@
                                    <input asp-for="passwordLama" class="form-control" />

                                    <span asp-validation-for="passwordLama" class="text-danger"></span>
                                    <span class="text-danger">@TempData["ErrorMessage"]</span>
                                </div>

                            </div>
                            <div class="form-group">
                                <div class="col-xl-4 col-md-4 col-xs-4">
                                    <label asp-for="passwordBaru" class="control-label"></label>
                                    @*<input type="password" asp-for="passwordBaru" class="form-control" />*@
                                    <input asp-for="passwordBaru" class="form-control" />

                                    <span asp-validation-for="passwordBaru" class="text-danger"></span>
                                </div>


                            </div>
                            <div class="form-group">
                                <div class="col-xl-4 col-md-4 col-xs-4">
                                    <label asp-for="passwordBaruConfirm" class="control-label"></label>
                                    @*<input type="password" asp-for="passwordBaruConfirm" class="form-control" />*@
                                    <input asp-for="passwordBaruConfirm" class="form-control" />

                                    <span asp-validation-for="passwordBaruConfirm" class="text-danger"></span>
                                </div>


                            </div>
                            <div class="form-group">
                                <input type="submit" value="Create" style="margin-left:0.6%" class="btn btn-primary" />
                            </div>
                            <span class="text-success text-center">@TempData["SuccessMessage"]</span>


                        </form>

                    </div>
                </div>


            </div>
            @Html.Raw(TempData["alert"])
            @Html.Raw(TempData["href"])
            @Html.Raw(TempData["swal"])


        </section>
    </div>

</body>



@section Scripts {
    <script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.0.2/js/dataTables.responsive.js"></script>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
