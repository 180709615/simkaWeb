@section Scripts{

    <script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.9/dist/js/bootstrap-select.min.js"></script>
    <script src="https://code.jquery.com/ui/1.11.1/jquery-ui.min.js"></script>

    <link rel="stylesheet" href="https://code.jquery.com/ui/1.11.1/themes/smoothness/jquery-ui.css" />

    <script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap4.min.js"></script>

    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.14.0/jquery.validate.min.js"></script>


    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.6/jquery.validate.unobtrusive.min.js"></script>


    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery.serializeJSON/2.9.0/jquery.serializejson.min.js"></script>
    <!--toastr-->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <!--sweetalert-->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.js"></script>

    <script src="https://cdn.datatables.net/responsive/2.2.3/js/dataTables.responsive.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.2.3/js/responsive.bootstrap4.min.js"></script>

<script>
  
</script>
    <script>
        var popup, dataTable;

       $("#karyawan").change(function(){      
           var selectedVal = $("#karyawan option:selected").val();        

                  dataTable = $('#example').DataTable({
                   "oSearch": { "sSearch": localStorage.getItem("myTextBox") },
                   "responsive": true,
                   "destroy": true,
                   "deferRender": true,
                   "ajax": {
                       "url": "/SimkaAdmin/LoadDataAsuransi?npp=" + selectedVal + "",
                       "type": "GET",
                       "datatype": "json"
                   },
                   "columns": [
                       {
                           data: "noAsuransi",
                           title: "Nomor Asuransi",
                         
                           type: "readonly",
                           "visible": true,
                       },
                       {
                           data: "namaInstitusi",
                           title: "Nama Institusi",

                       },
                       {
                           data: "tglBergabung",
                           title: "Tanggal bergabung",

                       },
                       {
                           data: "status",
                           title: " Status",

                       },
                       

                       {
                           "data": "noAsuransi", // diganti sama id
                           "render": function (data) {
                               return "<a class='btn btn-default btn-sm' onclick=ShowPopup('/SimkaAdmin/AddEditAsuransi?id=" + data + "')><i class='fa fa-pencil'></i> Detail / Edit</a><a class=' text-light btn btn-danger btn-sm' style='margin-left:5px' onclick=Delete(\"" + data + "\")><i class='fa fa-trash'></i> Delete</a>     ";

                           }
                       }
                   ],
                   "language": {
                       "emptyTable": "no data found."
                   }
               });
           
           
            localStorage.setItem('myTextBox', "");
        });


        function ShowPopup(url) {
            if ($('#karyawan').val() == null)
                alert("Pilih Karyawan Dahulu");
            else {            
            var formDiv = $('<div/>');
            $.get(url)
                .done(function (response) {
                    formDiv.html(response);
                    popup = formDiv.dialog({
                        modal : true,
                        autoOpen: true,
                        resizeable: false,
                        width: 1200,
                        height: 600,
                        title: 'Add or Edit Data',
                      
                        close: function () {
                            popup.dialog('destroy').remove();
                            var value = $('.dataTables_filter input').val();
                            localStorage.setItem('myTextBox', value);                        
                        }
                    });

                });
              
        }
        }
        function SubmitAddEdit(form) {
            $.validator.unobtrusive.parse(form);
            if ($(form).valid()) {
                var data = $(form).serializeJSON();
                data = JSON.stringify(data);
                console.log(data);
                $.ajax({
                    type: 'POST',
                    url: '/SimkaAdmin/PostAsuransi',
                    data: data,                     

                    contentType: 'application/json',              
                    success: function (data) {
                        if (data.success) {
                            popup.dialog('close');
                            ShowMessage(data.message);
                            dataTable.ajax.reload();
                        }
                    },
                    error: function (data) {
                        alert("Telah terjadi kesalahan dengan kode : " + data.status + ", Pastikan semua isian data sudah diisi");
                    }
                });

            }
            return false;
        }

        function Delete(id) {
            swal({
                title: "Are you sure want to Delete?",
                text: "You will not be able to restore the file!",
                type: "warning",
                showCancelButton: true,
                confirmButtonColor: "#DD6B55",
                confirmButtonText: "Yes, delete it!",
                closeOnConfirm: true
            }, function () {
                $.ajax({
                    type: 'DELETE',
                    url: '/SimkaAdmin/DeleteAsuransi/' + id,
                    success: function (data) {
                        if (data.success) {
                            ShowMessage(data.message);
                            dataTable.ajax.reload();
                        }
                        else
                            ShowMessage(data.message);
                    }
                });
            });


        }

        function ShowMessage(msg) {
            toastr.success(msg);
        }


    </script>



}
