@model GabungButirAppraisal
@{
    Layout = null;
}

<hr />
<div class="row">
    <div class="col-md-12">
        <form onsubmit="return SubmitAddEdit (this)">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdRefAppraisal" />
            <div class="form-group">
                <label asp-for="Deskripsi" class="control-label"></label>
                <input asp-for="Deskripsi" class="form-control" />
                <span asp-validation-for="Deskripsi" class="text-danger"></span>

            </div><br />
            <br />

            <div class="form-group">
                <label asp-for="IdRefJnsAppraisal" class="control-label">Jenis Appraisal</label>
                <select asp-for="IdRefJnsAppraisal"
                        asp-items="@(new SelectList(Model.jenis,"IdRefJnsAppraisal","Deskripsi"))">
                    <option>Please select one</option>
                </select>
            </div>
            <br />
            <br />
            <div class="form-group">
                <label asp-for="IdRefFungsional" class="control-label">Fungsional</label>
                <select asp-for="IdRefFungsional"
                        asp-items="@(new SelectList(Model.fungsi,"IdRefFungsional","Deskripsi"))">
                    <option>Please select one</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>