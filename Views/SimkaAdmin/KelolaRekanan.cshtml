@section Scripts{

    <script src="https://code.jquery.com/ui/1.11.1/jquery-ui.min.js"></script>

    <link rel="stylesheet" href="https://code.jquery.com/ui/1.11.1/themes/smoothness/jquery-ui.css" />

    <script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap4.min.js"></script>

    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.14.0/jquery.validate.min.js"
            asp-fallback-src="~/lib/jquery-validation/dist/jquery.validate.min.js"
            asp-fallback-test="window.jQuery && window.jQuery.validator"
            crossorigin="anonymous"
            integrity="sha384-Fnqn3nxp3506LP/7Y3j/25BlWeA3PXTyT1l78LjECcPaKCV12TsZP7yyMxOe/G/k">
    </script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.6/jquery.validate.unobtrusive.min.js"
            asp-fallback-src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"
            asp-fallback-test="window.jQuery && window.jQuery.validator && window.jQuery.validator.unobtrusive"
            crossorigin="anonymous"
            integrity="sha384-JrXK+k53HACyavUKOsL+NkmSesD2P+73eDMrbTtTk0h4RmOF8hF8apPlkp26JlyH">
    </script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery.serializeJSON/2.9.0/jquery.serializejson.min.js"></script>
    <!--toastr-->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <!--sweetalert-->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.js"></script>

    <script src="https://cdn.datatables.net/responsive/2.2.3/js/dataTables.responsive.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.2.3/js/responsive.bootstrap4.min.js"></script>

    <script>
        var popup, dataTable;

        $(document).ready(function () {
            dataTable = $('#example').DataTable({
                "responsive": true,
                "ajax": {
                    "url": "/SimkaAdmin/LoadDataRekanan",
                    "type": "GET",
                    "datatype": "json"
                },
                "columns": [
                    {
                        data: "idMstRekanan",
                        title: "ID",
                        name: "npp",
                        type: "readonly"

                    },
                    {
                        data: "jenis",
                        title: "Jenis Rekanan",
                         type: "readonly"
                    },
                    {
                        data: "namaRekanan",
                        title: "Nama Rekanan"
                    },
                    {
                        data: "alamat",
                        title: "Alamat"
                    },
                    {
                        data: "kota",
                        title: "Kota"
                    },
                    {
                        data: "kodepos",
                        title: "Kode Pos"
                    },

                    {
                        "data": "idMstRekanan", // diganti sama id
                        "render": function (data) {
                            return "<a class='btn btn-default btn-sm' onclick=ShowPopup('/SimkaAdmin/AddEditRekanan/" + data + "')><i class='fa fa-pencil'></i> Edit</a><a class=' text-light btn btn-danger btn-sm' style='margin-left:5px' onclick=Delete(" + data + ")><i class='fa fa-trash'></i> Delete</a>";
                        }
                    }
                ],
                "language": {
                    "emptyTable": "Tidak Ada Data"
                }
            });
        });


        function ShowPopup(url) {
            var formDiv = $('<div/>');
            $.get(url)
                .done(function (response) {
                    formDiv.html(response);
                    popup = formDiv.dialog({
                        autoOpen: true,
                        resizeable: false,
                        modal: true,
                        width: "auto",
                        height: 600,
                        title: 'Add or Edit Data',
                        close: function () {
                            popup.dialog('destroy').remove();
                        }
                    });
                });
        }


        function SubmitAddEdit(form) {
            $.validator.unobtrusive.parse(form);
            if ($(form).valid()) {
                var data = $(form).serializeJSON();
                data = JSON.stringify(data);
                console.log(data);
                $.ajax({
                    type: 'POST',
                    url: '/SimkaAdmin/PostRekanan',
                    data:data,
                    
                    contentType: 'application/json',
                    success: function (data) {
                        if (data.success) {
                            popup.dialog('close');
                            ShowMessage(data.message);
                            dataTable.ajax.reload();
                        }
                    },
                    error: function (data) {
                        alert("Telah terjadi kesalahan dengan kode : " + data.status + ", Pastikan semua isian data sudah diisi");
                    }
                });

            }
            return false;
        }

        function Delete(id) {
            swal({
                title: "Anda Yakin untuk Menghapus data ini?",
                text: "Data ini akan Terhapus Secara Permanen",
                type: "warning",
                showCancelButton: true,
                confirmButtonColor: "#DD6B55",
                confirmButtonText: "Ya, Hapus !",
                cancelButtonText: "Batal",      
            }, function () {
                $.ajax({
                    type: 'DELETE',
                    url: '/SimkaAdmin/DeleteRekanan/' + id,
                    success: function (data) {
                        if (data.success) {
                            ShowMessage(data.message);
                            dataTable.ajax.reload();
                        }
                    }
                });
            });


        }


        function ShowMessage(msg) {
            toastr.success(msg);
        }


    </script>


}
