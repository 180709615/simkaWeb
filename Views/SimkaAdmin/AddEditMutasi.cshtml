@model TrMutasiForm
@{
    Layout = null;
}

<hr />
<div class="row">
    <div class="col-md-12">
        <form onsubmit="return SubmitAddEdit(this)">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdTrMutasi" />
            <div class="form-group">
                <label asp-for="NoSk" class="control-label"></label>
                <input type="text" asp-for="NoSk" />
                <span asp-validation-for="NoSk" class="text-danger"></span>

                
                <div class="form-group">
                    <label for="" class="col-sm-2 col-form-label">Pilih Karyawan / Dosen</label>
                    <select asp-for="Npp"
                            asp-items="@(new SelectList(Model.karyawan,"Npp","Nama"))">
                        <option value="0">-</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="" class="col-sm-2 col-form-label">Unit  Baru</label>
                    <select asp-for="IdUnit"
                            asp-items="@(new SelectList(Model.unit,"IdUnit","NamaUnit"))">
                        <option value="0">-</option>
                    </select>
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
