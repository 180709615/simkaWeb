
@{
    //ViewData["Title"] = "LupaPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<head>
    @*<title>Profil @HttpContextAccessor.HttpContext.Session.GetString("Nama") - SIMKA UAJY</title>*@

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" />

</head>

<body class="hold-transition login-page">
    <!-- Content Wrapper. Contains page content -->
    <div class="login-box">


        <div class="login-logo">
            <b>SIMKA</b><br>
            <i>Sistem Informasi Manajemen Kepegawaian </i>

        </div>
        <div class="login-box-body">

            <h2 style="text-align:center; margin-bottom:30px; margin-top:-10px;"><b>Lupa Password</b></h2>
            <form method="post" asp-action="LupaPassword">



                <div class="form-group has-feedback">


                    <input id="npp" name="npp" class="form-control" placeholder="NPP">

                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>


                    <p class="text-danger">@TempData["Message"]</p>

                </div>
                <div class="row">
                    <div class="col-8">

                    </div>
                    <!-- /.col -->
                    <div class="col-4">

                        <button type="submit" asp-action="LupaPassword" class="btn btn-primary btn-block btn-flat">Submit</button>

                    </div>
                    <div class="form-group">
                        <p class="mb-1">


                        </p>
                    </div>
                    <!-- /.col -->
                </div>

            </form>
            @Html.Raw(TempData["alertLupaPassword"])
            <a href='/Home/Index'>< Kembali ke halaman sebelumnya</a>





        </div>



    </div>
</body>

