                                            function SubmitAddEdit(form) {
                                                $.validator.unobtrusive.parse(form);
                                                if ($(form).valid()) {
                                                    var data = $(form).serializeJSON();
                                                    data = JSON.stringify(data);
                                                    console.log(data);
                                                    $.ajax({
                                                        type: 'POST',
